<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1F0FF"
    tools:context=".manager_add_item">

    <Button
        android:id="@+id/man_show_all_items_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="303dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#6E85FB"
        android:fontFamily="@font/cormorant_infant_light"
        android:text="Всі"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/item_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_photo"
        android:layout_width="222dp"
        android:layout_height="185dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/name_man_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="325dp"
        android:fontFamily="@font/cormorant_infant_light"
        android:text="Назва:"
        android:textColor="#2138CD"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/man_type_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cormorant_infant_light"
        android:text="Вид:"
        android:textColor="#2138CD"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_man_l" />

    <TextView
        android:id="@+id/man_price_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cormorant_infant_light"
        android:text="Ціна:"
        android:textColor="#2138CD"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/man_type_l" />

    <TextView
        android:id="@+id/man_desc_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/cormorant_infant_light"
        android:text="Опис:"
        android:textColor="#2138CD"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/man_price_l" />

    <EditText
        android:id="@+id/man_enter_name"
        android:layout_width="246dp"
        android:layout_height="41dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="35dp"
        android:background="#FFFF"
        android:ems="10"
        android:fontFamily="@font/cormorant_infant_light"
        android:hint="Введіть назву..."
        android:inputType="text|textPersonName|textAutoComplete"
        android:singleLine="true"
        android:textColor="#2138CD"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_photo" />

    <EditText
        android:id="@+id/man_enter_type"
        android:layout_width="246dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="35dp"
        android:background="#FFFF"
        android:ems="10"
        android:fontFamily="@font/cormorant_infant_light"
        android:hint="Введіть вид..."
        android:inputType="text|textAutoComplete"
        android:singleLine="true"
        android:textColor="#2138CD"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/man_enter_name" />

    <EditText
        android:id="@+id/man_enter_price"
        android:layout_width="246dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:background="#FFFF"
        android:ems="10"
        android:fontFamily="@font/cormorant_infant_light"
        android:hint="Введіть ціну..."
        android:inputType="number|numberDecimal"
        android:singleLine="true"
        android:textColor="#2138CD"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/man_enter_type" />

    <EditText
        android:id="@+id/man_enter_decs"
        android:layout_width="365dp"
        android:layout_height="83dp"
        android:layout_marginTop="20dp"
        android:background="#F6F6F6"
        android:ems="10"
        android:fontFamily="@font/cormorant_infant_light"
        android:gravity="start|top"
        android:hint="Введіть опис"
        android:inputType="textMultiLine"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/man_desc_l" />

    <Button
        android:id="@+id/man_add_item_b"
        android:layout_width="204dp"
        android:layout_height="69dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="158dp"
        android:backgroundTint="#6E85FB"
        android:fontFamily="@font/cormorant_infant_light"
        android:text="Додати"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/man_enter_decs" />

    <Button
        android:id="@+id/add_photo_btn"
        android:layout_width="62dp"
        android:layout_height="45dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="19dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_photo"
        app:layout_constraintTop_toBottomOf="@+id/man_show_all_items_b" />
</androidx.constraintlayout.widget.ConstraintLayout>